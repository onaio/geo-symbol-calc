// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model SymbolConfig {
  id   String @id @default(uuid())
  json String
  runs Run[]
}

model Run {
  id            String       @id @default(uuid())
  lastTriggered DateTime     @default(now())
  triggeredBy   String
  config        SymbolConfig @relation(fields: [configId], references: [id])
  configId      String

  // TODO - constrain triggeredBy to an enum.
  // @@db.Check(triggeredBy in ("schedule", "manual"))
  Submission Submission[]
}

model Submission {
  submissionId      Int      @id @default(autoincrement())
  evaluatedAt       DateTime
  visitSubmissionId Int
  colorChange       String?
  run               Run      @relation(fields: [runId], references: [id])
  runId             String
}
